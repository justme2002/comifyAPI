<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('layout/header') -%>
</head>
<body>
    <div>
        <h1>
            <div class="container">
                <div class="jumbotron">
                    <p>ComicFy (Admin page)</p>
                </div>
            </div>
            <div class = "container">
                <%- include ('layout/navbar') -%>
            </div>
                <div class = "container">
                    <table class = "table table-striped">
                        <thead>
                            <tr>
                                <th class = "fs-6">Id</th>
                                <th class = "fs-6">title</th>
                                <th class = "fs-6">Description</th>
                                <th class = "fs-6">Author</th>
                                <th class = "fs-6">Category</th>
                                <th class = "fs-6">Background Image</th>
                                <th class = "fs-6">Likes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% comic.map(comic => { %>
                            <tr>
                                <td class = "fs-6">
                                    <%- comic._id %>
                                </td>
                                <td class = "fs-6">
                                    <%- comic.title %>
                                </td>
                                <td class = "fs-6">
                                    <%- comic.description %>
                                </td>
                                <td class = "fs-6">
                                    <%- comic.author %>
                                </td>
                                <td class = "fs-6">
                                    <%- comic.category.category %>
                                </td>
                                <td class = "fs-6">
                                    <img src="/<%- comic.backgroundImage %>" class = "img-thumbnail" alt="">
                                </td>
                                <td class = "fs-6">
                                    <%- comic.likes %>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </h1>
    </div>
</body>
</html>